@model IEnumerable<MvcApiPeliculasAWS.Models.Pelicula>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<form method="post">
    <label>Actor</label>
    <input type="text" name="actor" class="form-control" />
    <button class="btn btn-dark">Buscar</button>
</form>
<p>
    <a asp-controller="Peliculas" asp-action="Create" class="btn btn-dark">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdPelicula)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Argumento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Foto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Actores)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Youtube)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdPelicula)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genero)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Titulo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Argumento)
                </td>
                <td>
                    <img src="~/images/@Html.DisplayFor(modelItem => item.Foto)" style="width:100px;height:150px;" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Actores)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Precio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Youtube)
                </td>
                <td>
                    <a asp-controller="Peliculas" asp-action="Edit" asp-route-id="@item.IdPelicula" class="btn btn-success">Edit</a>
                    <a asp-controller="Peliculas" asp-action="Details" asp-route-id="@item.IdPelicula" class="btn btn-primary">Details</a>
                    <a asp-controller="Peliculas" asp-action="Delete" asp-route-id="@item.IdPelicula" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
